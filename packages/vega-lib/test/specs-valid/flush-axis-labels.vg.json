{
  "$schema": "https://vega.github.io/schema/vega/v3.json",
  "width": 300,
  "height": 200,
  "padding": 5,
  "scales": [
    {
      "name": "forwardx",
      "domain": [0, 1000000],
      "range": "width"
    },
    {
      "name": "backwardx",
      "domain": [0, 1000000],
      "range": "width",
      "reverse": true
    },
    {
      "name": "forwardy",
      "domain": [0, 1000000],
      "range": "height"
    },
    {
      "name": "backwardy",
      "domain": [0, 1000000],
      "range": "height",
      "reverse": true
    }
  ],
  "axes": [
    {
      "orient": "top",
      "scale": "forwardx",
      "labelFlush": true,
      "labelOverlap": true,
      "format": "s"
    },
    {
      "orient": "bottom",
      "scale": "backwardx",
      "labelFlush": true,
      "labelOverlap": true
    },
    {
      "orient": "left",
      "scale": "forwardy",
      "labelFlush": true,
      "labelOverlap": true,
      "format": "s"
    },
    {
      "orient": "right",
      "scale": "backwardy",
      "labelFlush": true,
      "labelOverlap": true
    }
  ]
}