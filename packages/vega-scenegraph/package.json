{
  "name": "vega-scenegraph",
  "version": "1.0.0",
  "description": "Vega scenegraph and renderers.",
  "repository": {
    "type": "git",
    "url": "http://github.com/vega/vega-scenegraph.git"
  },
  "author": {
    "name": "Jeffrey Heer",
    "url": "http://idl.cs.washington.edu"
  },
  "license": "BSD-3-Clause",
  "dependencies": {
    "d3": "3.5.x",
    "datalib": "1.2.x",
    "canvas": "1.2.x"
  },
  "devDependencies": {
    "browserify": "latest",
    "browserify-shim": "latest",
    "chai": "latest",
    "istanbul": "latest",
    "jsdom": "3",
    "jshint": "latest",
    "mocha": "latest",
    "uglify-js": "latest"
  },
  "main": "src/index.js",
  "scripts": {
    "lint": "jshint src/",
    "test": "mocha --recursive test/",
    "cover": "istanbul cover _mocha -- --recursive test/",
    "build": "browserify src/index.js --debug --standalone vg.scene -o vega-scenegraph.js",
    "postbuild": "uglifyjs vega-scenegraph.js -c -m -o vega-scenegraph.min.js"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "d3": "global:d3",
    "canvas": "global:canvas"
  }
}
