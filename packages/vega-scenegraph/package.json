{
  "name": "vega-scenegraph",
  "version": "1.0.1",
  "description": "Vega scenegraph and renderers.",
  "repository": {
    "type": "git",
    "url": "http://github.com/vega/vega-scenegraph.git"
  },
  "author": {
    "name": "Jeffrey Heer",
    "url": "http://idl.cs.washington.edu"
  },
  "license": "BSD-3-Clause",
  "dependencies": {
    "d3": "^3.5.6",
    "datalib": "1.2.x",
    "canvas": "^1.2.3"
  },
  "devDependencies": {
    "browserify": "^10.2.6",
    "browserify-shim": "^3.8.9",
    "chai": "^3.0.0",
    "istanbul": "latest",
    "jsdom": "^3.0.0",
    "jshint": "2.8.x",
    "mocha": "^2.2.5",
    "uglify-js": "2.4.x",
    "watchify": "^3.2.3"
  },
  "main": "src/index.js",
  "scripts": {
    "lint": "jshint src/",
    "test": "mocha --recursive test/",
    "cover": "istanbul cover _mocha -- --recursive test/",
    "build": "browserify src/index.js -d -s vg.scene -o vega-scenegraph.js",
    "postbuild": "uglifyjs vega-scenegraph.js -cm > vega-scenegraph.min.js",
    "watch": "watchify src/index.js -v -d -s vg.scene -o vega-scenegraph.js"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "d3": "global:d3",
    "canvas": "global:canvas"
  }
}
