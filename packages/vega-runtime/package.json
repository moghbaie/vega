{
  "name": "vega-runtime",
  "version": "0.1.0",
  "description": "Runtime support for Vega dataflows.",
  "keywords": [
    "vega",
    "runtime",
    "dataflow",
    "reactive"
  ],
  "license": "BSD-3-Clause",
  "author": {
    "name": "Jeffrey Heer",
    "url": "http://idl.cs.washington.edu"
  },
  "main": "build/vega-runtime.js",
  "jsnext:main": "index",
  "repository": {
    "type": "git",
    "url": "https://github.com/uwdata/vega-runtime.git"
  },
  "scripts": {
    "build": "npm run test && uglifyjs build/vega-runtime.js -c -m -o build/vega-runtime.min.js",
    "pretest": "rm -rf build && mkdir build && json2module package.json > build/package.js && rollup -f umd -g vega-dataflow:vega -n vega -o build/vega-runtime.js -- index.js",
    "test": "tape 'test/**/*-test.js' && eslint index.js src test"
  },
  "dependencies": {
    "vega-dataflow": "~0.3.0"
  },
  "devDependencies": {
    "eslint": "2",
    "json2module": "0.0",
    "rollup": "0.26",
    "rollup-plugin-node-resolve": "1",
    "tape": "4",
    "uglify-js": "2"
  }
}